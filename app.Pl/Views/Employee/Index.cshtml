@model IEnumerable<Employee>;
@{
    ViewData["Title"] = "Employee";
}

<h1 class="mb-3">Department</h1>
<br />
<a asp-action="Create" class="btn btn-success">Add new Employee</a>

@if (Model.Count() > 0) // happy senario
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(d => d.Name)</th>
                <th>@Html.DisplayNameFor(d => d.Age)</th>
                <th>@Html.DisplayNameFor(d => d.Adress)</th>
                <th>@Html.DisplayNameFor(d => d.Salary)</th>
                <th>@Html.DisplayNameFor(d => d.HirDate)</th>
                <th>@Html.DisplayNameFor(d => d.Email)</th>
                <th>@Html.DisplayNameFor(d => d.PhoneNumbers)</th>

                <th>Details</th>
                <th>update</th>
                <th>delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Employee in Model)
            {
                <tr>
                    <td>@Employee.Name</td>
                    <td>@Employee.Age</td>
                    <td>@Employee.Adress</td>
                    <td>@Employee.Email</td>
                    <td>@Employee.PhoneNumbers</td>
                    <td>@Employee.HirDate</td>
                    <td>@Employee.Salary</td>


                    <td>
                        <a asp-controller="Employee" asp-action="Details" asp-route-id="@Employee.Id">
                            <i class="fas fa-eye"></i>
                        </a>
                    </td>
                    <td>
                        <a asp-controller="Employee" asp-action="Edit" asp-route-id="@Employee.Id">
                            <i class="fa-solid fa-edit"></i>
                        </a>
                    </td>
                    <td>
                        <a asp-controller="Employee" asp-action="Delete" asp-route-id="@Employee.Id">
                            <i class="fa-solid fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        No Employee creation
    </div>
}
